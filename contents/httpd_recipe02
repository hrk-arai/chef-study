# yumでhttpdをインストール
package "install httpd!" do
  package_name "httpd"
  action :install
end

# httpdのサービスを起動
service "httpd" do
  action [:enable, :start]
end

# index.html
file "/var/www/html/index.html" do
  content "<h1>ohai chef</h1>"
  action :create
end

# index2.html
template "template test" do
  source "index2.html"
  path "/var/www/html/index2.html"
  action :create
end
